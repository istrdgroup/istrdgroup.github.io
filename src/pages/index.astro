    <!-- Content -->
    <div class="relative z-10 container mx-auto px-4 pt-16 sm:pt-20 pb-16 h-screen flex items-center">
      <div class="max-w-4xl">
        <div class="animate-slide-in-left">
          <h1 class="text-4xl sm:text-6xl lg:text-8xl font-bold leading-tight mb-6 sm:mb-8">
            Changing your idea of what's
            <span class="text-accent drop-shadow-[0_0_10px_rgba(255,255,255,0.8)]">possible.</span>
          </h1>
          <p class="text-lg sm:text-2xl lg:text-3xl text-gray-200 mb-8 sm:mb-12 leading-relaxed max-w-3xl">
            Discover practical solutions designed to tackle today's—and tomorrow's—toughest research challenges.
          </p>
          <div class="flex flex-col sm:flex-row gap-6">
            <a href="#solutions" class="btn-primary text-lg px-8 py-4">
              Explore Solutions
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Solutions Section -->
  <section id="solutions" class="bg-white text-black py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold mb-10 text-center">Our Solutions</h2>
      <div class="grid md:grid-cols-3 gap-8">
        <div class="p-8 rounded-xl shadow-lg border border-gray-100 bg-gray-50 hover:shadow-2xl transition">
          <h3 class="text-2xl font-semibold mb-4 text-primary">Robotics</h3>
          <p class="text-gray-700 mb-4">Advanced robotics for real-world applications, from automation to exploration.</p>
        </div>
        <div class="p-8 rounded-xl shadow-lg border border-gray-100 bg-gray-50 hover:shadow-2xl transition">
          <h3 class="text-2xl font-semibold mb-4 text-primary">AI & Machine Learning</h3>
          <p class="text-gray-700 mb-4">Intelligent systems that learn, adapt, and solve complex problems.</p>
        </div>
        <div class="p-8 rounded-xl shadow-lg border border-gray-100 bg-gray-50 hover:shadow-2xl transition">
          <h3 class="text-2xl font-semibold mb-4 text-primary">Automation</h3>
          <p class="text-gray-700 mb-4">Streamlining processes for efficiency and reliability in research and industry.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="bg-gradient-dark text-white py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold mb-8 text-center">Get in Touch</h2>
      <form class="max-w-xl mx-auto bg-black/30 p-8 rounded-xl shadow-lg space-y-6">
        <input type="text" placeholder="Your Name" class="w-full p-4 rounded bg-white/90 text-black placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary" />
        <input type="email" placeholder="Your Email" class="w-full p-4 rounded bg-white/90 text-black placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary" />
        <textarea placeholder="Your Message" class="w-full p-4 rounded bg-white/90 text-black placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary" rows="4"></textarea>
        <button type="submit" class="btn-primary w-full">Send Message</button>
      </form>
    </div>
  </section>

