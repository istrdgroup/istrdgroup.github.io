---
import { buttonVariants } from "@/components/ui/button";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="404 - Page Not Found" description="Page not found">
  <section class="min-h-screen bg-gradient-dark text-white flex items-center justify-center">
    <div class="text-center animate-fade-in-up">
      <h1 class="text-9xl font-bold text-accent mb-4">404</h1>
      <h2 class="text-4xl font-semibold mb-8">Page not found</h2>
      <p class="text-xl text-gray-300 mb-12 max-w-md mx-auto">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/" class="btn-primary">
          Go Back Home
        </a>
        <a href="#contact" class="btn-secondary border-white text-white hover:bg-white hover:text-primary">
          Contact Us
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
