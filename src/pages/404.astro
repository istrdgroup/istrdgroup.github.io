---
import { buttonVariants } from "@/components/ui/button";
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
  title="404 - Not Found"
  description="404 Error â€” this page was not found"
>
  <section class="relative min-h-screen bg-gradient-dark text-white overflow-hidden">
    <div class="relative z-10 container mx-auto px-4 pt-20 pb-16 h-screen flex items-center justify-center">
      <div class="text-center max-w-2xl">
        <div class="animate-fade-in-up">
          <h1 class="text-8xl lg:text-9xl font-bold leading-tight mb-6 text-accent">
            404
          </h1>
          <h2 class="text-4xl lg:text-5xl font-bold leading-tight mb-8">
            Page not found
          </h2>
          <p class="text-xl lg:text-2xl text-gray-300 mb-12 leading-relaxed">
            Sorry, we couldn't find the page you're looking for. 
            <br class="hidden sm:inline" />
            Let's get you back on track.
          </p>
          <div class="flex flex-col sm:flex-row gap-6 justify-center">
            <a href="/" class="btn-primary text-lg px-8 py-4">
              Go Back Home
            </a>
            <a href="#contact" class="btn-secondary border-white text-white hover:bg-white hover:text-primary text-lg px-8 py-4">
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
